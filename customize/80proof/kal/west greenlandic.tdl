3s-3p-subj-obj-marker-lex-rule := transitive-subj-obj-markers-lex-rule &
  [ SYNSEM.LOCAL.CAT.VAL [ SUBJ.FIRST.LOCAL.CONT.HOOK.INDEX.PNG [ NUM singular,
